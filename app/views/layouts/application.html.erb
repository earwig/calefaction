<!DOCTYPE html>
<html>
<head>
    <title><%= get_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
</head>
<body>
    <div id="header">
        <%= render "shared/header" %>
    </div>
    <div id="content">
        <%= yield %>
    </div>
    <div id="footer">
        <%= render "shared/footer" %>
    </div>
</body>
</html>
